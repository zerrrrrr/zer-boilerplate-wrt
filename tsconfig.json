{
  "compilerOptions": {
    "outDir": "lib",
    "target": "es6",
    "module": "exnest",
    "lib": ["dom", "es2020"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "downlevelIteration": true,
    "allowSyntheticDefaultImports": true,
    "importHelpers": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "removeComments": true,
    "noEmitOnError": true,
    "strict": true,
    "noImplicitAny": false,
    "baseUrl": ".",
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "paths": {
      "tslib": ["./node_modules/tslib/tslib.d.ts"],
      "@/*": ["./src/*"]
    },
    "typeRoots": ["node_modules/@types", "src/typings"]
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
